<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeMapInputFeildLayout"
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:padding="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteY="238dp"
            tools:layout_editor_absoluteX="8dp">

            <!-- Text Description Field -->
            <TextView
                android:id="@+id/firstFragmentTxtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/clbs_fragment_one_description"
                android:textColor="@color/clbsPrimaryFontColor"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <!-- Field Wrapper Section Start -->
            <LinearLayout
                android:id="@+id/field_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/firstFragmentTxtDescription"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clbs_fragment_one_input"
                        android:textColor="@color/clbsPrimaryFontColorDarkGray"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/firstFragmentInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/white"
                        android:maxLines="1"
                        android:textColor="@color/clbsPrimaryFontColorBlack" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/clbsPrimaryFontColorDarkGray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/clbsPrimaryFontColorDarkGray" />
            </LinearLayout>
            <!-- Field Wrapper Section End -->
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
